<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Send sms" />

    <Button
        android:id="@+id/btnStatsContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendSMS"
        android:layout_alignEnd="@+id/btnSendSMS"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="-73dp"
        android:text="View stats and contacts" />

    <Button
        android:id="@+id/btnParameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStatsContacts"
        android:layout_alignEnd="@+id/btnStatsContacts"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="51dp"
        android:text="Parameters" />

</RelativeLayout>